<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".TipsActivity"
    android:orientation="vertical" >

    <LinearLayout
            android:id="@+id/bill_layout_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true">
        <NumberPicker
                android:id="@+id/bill_hundreds"
                android:layout_width="50dip"
                android:layout_height="wrap_content" />
        <NumberPicker
                android:id="@+id/bill_tens"
                android:layout_width="50dip"
                android:layout_height="wrap_content" />

        <NumberPicker
                android:id="@+id/bill_units"
                android:layout_width="50dip"
                android:layout_height="wrap_content" />


        <TextView
                android:text="@string/decimal_point"
                android:textSize="46sp"
                android:layout_width="20dip"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_gravity="bottom"/>

        <NumberPicker
                android:id="@+id/bill_decimal_one"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:width="100dip" />

        <NumberPicker
                android:id="@+id/bill_decimal_two"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:width="100dip" />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/multiplication_sign"
                android:gravity="center"/>
            </LinearLayout>

    <LinearLayout
            android:id="@+id/tip_percentage_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true">
        <NumberPicker
                android:id="@+id/tip_percentage_tens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="100dip" />

        <NumberPicker
                android:id="@+id/tip_percentage_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="100dip" />


        <TextView
                android:text="@string/decimal_point"
                android:textSize="46sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_gravity="bottom"/>

        <NumberPicker
                android:id="@+id/tip_percentage_decimal_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="100dip" />

        <NumberPicker
                android:id="@+id/tip_percentage_decimal_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="100dip" />
        <TextView
                android:text="@string/percentage_sign"
                android:textSize="46sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_gravity="bottom"/>
            </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
        <TextView
                android:id="@+id/tipsAmount"
                android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/default_amount"
                android:textSize="40sp"
                android:gravity="center"/>
            </LinearLayout>



</RelativeLayout>
